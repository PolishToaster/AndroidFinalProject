<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.algonquin.androidfinalproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OCTranspo"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".NutritionActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FavouritesPage"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NutritionSearch"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FoodDetails"
            android:theme="@style/AppTheme" />
        <activity android:name=".AddMeal"
            android:theme="@style/AppTheme"/>
        <activity android:name=".MealDetail"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>