            android:text=""/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/otherDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""/>
    </TableRow>


</TableLayout>